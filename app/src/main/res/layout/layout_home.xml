<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<RelativeLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/_4sdp"
        app:cardCornerRadius="@dimen/_4sdp"
        android:layout_margin="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_5sdp"
        app:cardBackgroundColor="#ecf8f7">

        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".40"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/betNma"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:singleLine="true"
                    android:text="SRIDEVI"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:textSize="14sp" />


                <LinearLayout
                    android:id="@+id/ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/open_panna"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:fontFamily="@font/roboto_bold"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/result_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:fontFamily="@font/roboto_bold"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/result_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:fontFamily="@font/roboto_bold"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/close_panna"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:fontFamily="@font/roboto_bold"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"/>

                </LinearLayout>


                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:visibility="visible"
                    android:textColor="#feb294"
                    android:fontFamily="@font/roboto_regular"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".10"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:layout_height="@dimen/_30sdp"
                    android:layout_width="@dimen/_30sdp"
                    android:src="@drawable/sans_watch"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".30"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/openTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/alertDialogButton"
                    android:text="Open Time 2 Pm"/>

                <TextView
                    android:id="@+id/closeTime"
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/alertDialogButton"
                    android:layout_height="wrap_content"
                    android:text="Close Time 2 Pm"
                    android:layout_marginTop="@dimen/_5sdp"/>

            </LinearLayout>

    <Button
        android:id="@+id/ivProfile"
        android:layout_width="0dp"
        android:layout_weight=".20"
        android:layout_gravity="center_vertical"
        android:layout_height="@dimen/_30sdp"
        android:textColor="@color/white"
        android:text="Play"
        android:background="@drawable/bg_button" />





        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>
</layout>