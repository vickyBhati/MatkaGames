<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <include layout="@layout/toolbar_new" android:id="@+id/myTool"/>



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/llMain"
    android:background="#FFFFFF"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="1"
        android:background="#FFFFFF"
        android:layout_marginTop="@dimen/_40sdp">

        <LinearLayout
            android:id="@+id/llSingle"
            android:onClick="onClick"
            android:layout_width="0dp"
            android:layout_weight=".50"
            android:layout_height="@dimen/_90sdp"
            android:gravity="center"
            android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_8sdp"
            android:src="@drawable/single" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Single"
                android:visibility="gone"
                android:textColor="@color/text_color_red"
                android:textSize="16sp"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llJodi"
            android:onClick="onClick"
            android:layout_width="0dp"
            android:layout_weight=".50"
            android:layout_height="@dimen/_90sdp"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:src="@drawable/jodi" />

            </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="3"
        android:layout_marginTop="@dimen/_10sdp">

            <LinearLayout
                android:id="@+id/llSinglePanna"
                android:onClick="onClick"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/_90sdp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:src="@drawable/single_panna" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/llDoublePana"
                android:onClick="onClick"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/_90sdp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:src="@drawable/double_panna" />


            </LinearLayout>



            <LinearLayout
                android:id="@+id/llTriplePanna"
                android:onClick="onClick"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/_90sdp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:src="@drawable/triple_panna" />


            </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginTop="@dimen/_10sdp"
        android:gravity="center">


            <LinearLayout
                android:id="@+id/llHalfSagman"
                android:onClick="onClick"
                android:layout_width="0dp"
                android:layout_weight=".50"
                android:layout_height="@dimen/_90sdp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:src="@drawable/half_sangam" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/llFullSam"
                android:onClick="onClick"
                android:layout_width="0dp"
                android:layout_weight=".50"
                android:layout_height="@dimen/_90sdp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:src="@drawable/full_sangam" />

            </LinearLayout>


    </LinearLayout>

</LinearLayout>

    </LinearLayout>
</layout>
