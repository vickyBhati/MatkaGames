<?xml version="1.0" encoding="utf-8"?>
<layout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include layout="@layout/toolbar_new" android:id="@+id/mytool"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_50sdp"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_5sdp"
        app:cardBackgroundColor="#FFFFFF"
        android:layout_margin="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="Enter the 4 digit OTP"/>



        <EditText
            android:id="@+id/otp"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_35sdp"
            android:maxLength="4"
            android:paddingStart="@dimen/_10sdp"
            android:background="@drawable/border_gray_light"
            android:layout_marginTop="@dimen/_15sdp"/>


        <Button
            android:id="@+id/btnOtp"
            android:layout_width="160dp"
            android:layout_height="45dp"
            android:text="Submit"
            android:onClick="onClick"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_button_theme"/>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_8sdp"
            android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:text="Didn't get the OTP? "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_gravity="center"
                android:text="Resend OTP"
                android:layout_marginLeft="@dimen/_5sdp" />

        </LinearLayout>


    </LinearLayout>

    </androidx.cardview.widget.CardView>

    </LinearLayout>

        </ScrollView>

    </LinearLayout>


</LinearLayout>

</layout>
